<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserTestingSuite" parallel="false">
    <parameter name="browser" value="chrome"/> <!-- Default browser can be set here -->
    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="CrossBrowserTest"/>
        </classes>
    </test>
    <test name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="CrossBrowserTest"/>
        </classes>
    </test>
</suite>